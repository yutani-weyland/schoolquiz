---
import Layout from "../layouts/Layout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import { QuizCard } from "../components/quiz/QuizCard";
import { NextQuizTeaser } from "../components/quiz/NextQuizTeaser";

const quizzes = [
  {
    id: 279,
    slug: "279",
    title: "Shape Up, Pumpkins, Famous First Words, Crazes, and Next In Sequence.",
    blurb: "A weekly selection mixing patterns, pop culture and logic.",
    weekISO: "2024-01-15",
    colorHex: "#FFE135",
    status: "available" as const,
    tags: ["Patterns", "Pop Culture", "Logic", "Famous Quotes", "Sequences"]
  },
  {
    id: 278,
    slug: "278",
    title: "Opposite Day, Lights, Common Ground, Robots Etc, and First Ladies.",
    blurb: "Wordplay meets trivia.",
    weekISO: "2024-01-08",
    colorHex: "#FF69B4",
    status: "available" as const,
    tags: ["Wordplay", "History", "Technology", "Politics", "General Knowledge"]
  },
  {
    id: 277,
    slug: "277",
    title: "Back to the Past, Name That Nation, Name the Other, Analog Games, and What Does It Stand For?",
    blurb: "History, geography and acronyms.",
    weekISO: "2024-01-01",
    colorHex: "#39FF14",
    status: "available" as const,
    tags: ["History", "Geography", "Games", "Acronyms", "Trivia"]
  },
  {
    id: 276,
    slug: "276",
    title: "Holiday Trivia, Winter Sports, Year End Review, and Festive Fun.",
    blurb: "Seasonal mixed bag.",
    weekISO: "2023-12-25",
    colorHex: "#00E5FF",
    status: "coming_soon" as const,
    tags: ["Seasonal", "Sports", "Year Review", "Holidays", "Winter"]
  },
  {
    id: 275,
    slug: "275",
    title: "Movie Magic, Tech Trends, Sports Moments, and Pop Culture.",
    blurb: "Headlines and highlights.",
    weekISO: "2023-12-18",
    colorHex: "#FF10F0",
    status: "available" as const,
    tags: ["Movies", "Technology", "Sports", "Pop Culture", "Entertainment"]
  },
  {
    id: 274,
    slug: "274",
    title: "World Wonders, Historical Events, Science Facts, and Geography.",
    blurb: "Curiosities around the world.",
    weekISO: "2023-12-11",
    colorHex: "#FF7F00",
    status: "available" as const,
    tags: ["Science", "Geography", "History", "World Facts", "Nature"]
  }
];
---

<Layout title="Your Quizzes - The School Quiz">
  <SiteHeader fadeLogo={true} showUpgrade={true} />

  <main class="min-h-screen pt-24 pb-0">
    <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 xl:px-12">
      <!-- Page Title -->
      <h1 id="page-title" class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 dark:text-white text-center mb-16">
        Your Quizzes
      </h1>
      
      <!-- Quizzes Grid - Responsive and spacious -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        <!-- Next Quiz Teaser Card -->
        <div class="hidden md:block h-full">
          <NextQuizTeaser client:load />
        </div>
        
        {quizzes.map((quiz, index) => (
          <div class="h-full">
            <QuizCard quiz={quiz} isNewest={index === 0} client:load />
          </div>
        ))}
      </div>

      <!-- Subscribe CTA - Minimalist -->
      <div class="mt-24 mb-32 text-center px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Don't miss the next quiz
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto leading-relaxed">
          Subscribe to get this week's quiz delivered straight to your inbox every Monday morning.
        </p>
        <a 
          href="/subscribe"
          class="inline-flex items-center justify-center px-8 py-4 text-base bg-blue-600 text-white rounded-full font-semibold hover:bg-blue-700 dark:hover:bg-blue-500 transition-all hover:scale-105 shadow-lg hover:shadow-xl"
        >
          3 Quizzes for Free
        </a>
      </div>
    </div>
  </main>

  <footer class="bg-gray-50 dark:bg-[#1A1A1A] border-t border-gray-200 dark:border-gray-800 py-16 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
        <!-- Logo -->
        <div class="text-2xl font-bold text-gray-900 dark:text-white tracking-tight">
          The School Quiz
        </div>
        
        <!-- Navigation Links -->
        <div class="flex flex-col md:flex-row gap-8 md:gap-12">
          <div class="flex flex-col gap-3">
            <a href="/quizzes" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Quizzes</a>
            <a href="/about" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">About</a>
            <a href="/contact" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Contact</a>
          </div>
          <div class="flex flex-col gap-3">
            <a href="/privacy" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Privacy</a>
            <a href="/terms" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Terms</a>
            <a href="/help" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Help</a>
          </div>
        </div>
      </div>
      
      <!-- Copyright -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800 text-center text-sm text-gray-500 dark:text-gray-400">
        <p>&copy; 2026 The School Quiz. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script is:inline>
    // Update page title with personalized greeting if logged in
    function updatePageTitle() {
      const titleElement = document.getElementById('page-title');
      if (!titleElement) return;

      // Check if user is logged in (using localStorage/sessionStorage)
      const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
      const username = sessionStorage.getItem('username') || localStorage.getItem('username') || '';

      if (isLoggedIn && username) {
        // Personalized greeting
        titleElement.textContent = `G'day ${username}`;
      } else {
        // Default title
        titleElement.textContent = 'Your Quizzes';
      }
    }

    // Run on load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', updatePageTitle);
    } else {
      updatePageTitle();
    }
  </script>
  
</Layout>
