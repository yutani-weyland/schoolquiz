---
import Layout from "../layouts/Layout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SignInForm from "../components/auth/SignInForm.tsx";
---

<Layout title="Sign In - The School Quiz">
  <SiteHeader />
  <main class="min-h-screen bg-gray-50 dark:bg-[#1A1A1A] pt-24 pb-16">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-center min-h-[calc(100vh-12rem)]">
        <div class="w-full max-w-md">
          <div class="text-center mb-12 md:mb-16">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-4 md:mb-6">
              Sign in
            </h1>
            <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
              Welcome back to The School Quiz
            </p>
          </div>
          <SignInForm client:only="react" />
        </div>
      </div>
    </div>
  </main>
</Layout>

