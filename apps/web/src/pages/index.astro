---
import Layout from "../layouts/Layout.astro";
import NextQuizCountdown from "../components/NextQuizCountdown.tsx";
import SiteHeader from "../components/SiteHeader.astro";
import QuizSafariPreview from "../components/QuizSafariPreview.tsx";
import QuizPhonePreview from "../components/QuizPhonePreview.tsx";
---

<Layout title="The School Quiz - Weekly Quiz for High School Students">

  <SiteHeader fadeLogo={true} />


              <main class="min-h-screen">
                <!-- Notch Component -->
                <NextQuizCountdown client:only="react" />
                
                <!-- Hero Section -->
                <section class="min-h-screen flex flex-col items-center justify-center px-4 pt-32 relative">
                  <div class="max-w-4xl mx-auto text-center mb-16">
                    <h1
                      class="text-6xl md:text-7xl lg:text-8xl font-bold text-gray-900 dark:text-white mb-6"
                      id="headline"
                    >
                      A weekly quiz for<br />
                      <span class="text-blue-600 dark:text-blue-400">high school students</span>
                    </h1>

                    <p
                      class="text-lg md:text-xl text-gray-600 dark:text-[#DCDCDC] mb-12 max-w-4xl mx-auto"
                      id="description"
                    >
                      Our quiz covers the things you're interested in - music, sport, movies, current affairs, pop culture and the subjects you study. No insanely hard questions, no AI slop. Just a solid quiz that drops every Monday morning.
                    </p>

                    <div
                      class="flex flex-col sm:flex-row gap-4 justify-center"
                      id="buttons"
                    >
                      <a
                        href="/quizzes"
                        class="inline-flex items-center justify-center px-6 py-3 bg-[#3B82F6] text-white rounded-full font-medium hover:bg-[#2563EB] transition-colors focus:outline-none focus:ring-2 focus:ring-[#3B82F6] focus:ring-offset-2"
                      >
                        Subscribe for free
                      </a>
                      <a
                        href="/sign-in"
                        class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-[#DCDCDC] text-gray-700 dark:text-[#DCDCDC] rounded-full font-medium hover:bg-gray-100 dark:hover:bg-[#DCDCDC] hover:text-gray-900 dark:hover:text-[#1A1A1A] transition-colors focus:outline-none focus:ring-2 focus:ring-gray-300 dark:focus:ring-[#DCDCDC] focus:ring-offset-2"
                      >
                        Sign in
                      </a>
                    </div>
                  </div>

                  <!-- Safari Preview Peeking from Bottom -->
                  <div class="w-full px-4 mt-4 mb-8">
                    <div class="max-w-6xl mx-auto">
                      <QuizSafariPreview client:only="react" />
                    </div>
                  </div>
                </section>

                <!-- Spacer between Safari and Footer -->
                <div class="py-6"></div>

              <footer class="bg-gray-50 dark:bg-[#1A1A1A] py-12 px-4">
                <div class="max-w-6xl mx-auto">
                  <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
                    <!-- Logo -->
                    <div class="text-2xl font-bold text-gray-900 dark:text-white tracking-tight">
                      The School Quiz
                    </div>
                    
                    <!-- Navigation Links -->
                    <div class="flex flex-col md:flex-row gap-8 md:gap-12">
                      <div class="flex flex-col gap-3">
                        <a href="/quizzes" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Quizzes</a>
                        <a href="/about" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">About</a>
                        <a href="/contact" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Contact</a>
                      </div>
                      <div class="flex flex-col gap-3">
                        <a href="/privacy" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Privacy</a>
                        <a href="/terms" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Terms</a>
                        <a href="/help" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Help</a>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Copyright -->
                  <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700 text-center text-gray-500 dark:text-gray-400">
                    <p>&copy; 2026 The School Quiz. All rights reserved.</p>
                  </div>
                </div>
              </footer>
            </main>

            <style>
              @keyframes fadeIn {
                from {
                  opacity: 0;
                  transform: translateY(10px);
                }
                to {
                  opacity: 1;
                  transform: translateY(0);
                }
              }
              
              .animate-fadeIn {
                animation: fadeIn 0.3s ease-out;
              }
            </style>

          </body>
        </html>