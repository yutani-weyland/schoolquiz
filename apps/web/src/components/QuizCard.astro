---
export interface Props {
  number: string; // e.g. "#279"
  weekLabel: string; // e.g. "Week of Jan 15, 2024"
  topics: string[];
  href?: string; // link to quiz page
  disabled?: boolean; // coming soon
  cta?: string; // button label
  bgColor?: string; // bright card background
}

const {
  number,
  weekLabel,
  topics,
  href = "#",
  disabled = false,
  cta = disabled ? "Coming soon" : "Play quiz",
  bgColor = "#FFF26E",
} = Astro.props as Props;
---

<article class={[
  "rounded-2xl p-6 transition-all duration-200 h-full flex flex-col shadow-sm",
  disabled ? "opacity-75 cursor-not-allowed" : "hover:shadow-md hover:-translate-y-0.5"
].join(" ")}
  style={{ backgroundColor: bgColor }}
>
  <header class="flex items-start sm:items-center justify-between gap-4 mb-5">
    <h2 class="text-2xl md:text-3xl font-extrabold tracking-tight text-gray-900">{number}</h2>
    <span class="text-sm text-gray-800 font-medium whitespace-nowrap">{weekLabel}</span>
  </header>

  <div class="space-y-2 mb-8">
    {topics.map((t) => (
      <p class="text-gray-900 text-2xl md:text-3xl leading-tight font-extrabold tracking-tight">{t}</p>
    ))}
  </div>

  <div class="mt-auto">
    {disabled ? (
      <p class="text-sm text-gray-500 italic">{cta}</p>
    ) : (
      <a href={href} class="inline-flex items-center justify-center px-5 py-2.5 rounded-full bg-blue-600 text-white font-medium hover:bg-blue-700 dark:hover:bg-blue-500 transition-colors">
        {cta}
      </a>
    )}
  </div>
</article>

<style>
  /* Keep text heavy and compact like the inspiration, but within our type scale */
</style>


