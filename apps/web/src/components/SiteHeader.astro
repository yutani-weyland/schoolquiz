---
import SimpleThemeToggle from "./SimpleThemeToggle.tsx";

export interface Props {
  fadeLogo?: boolean;
  showUpgrade?: boolean;
}

const { fadeLogo = false, showUpgrade = false } = Astro.props as Props;
---

<!-- Transparent, fixed header shared across pages -->
<header class="site-header fixed top-0 left-0 right-0 z-50">
  <div class="flex items-center justify-between">
    <a 
      id="site-logo" 
      data-fade={fadeLogo ? 'true' : 'false'} 
      href="/"
      class="text-2xl font-bold text-gray-900 dark:text-white tracking-tight transition-opacity duration-300 hover:opacity-80 cursor-pointer"
    >
      The School Quiz
    </a>
    <div class="flex items-center gap-3">
      {showUpgrade && (
        <a 
          id="header-upgrade-btn"
          href="/premium" 
          class="hidden md:inline-flex group items-center justify-center gap-2 whitespace-nowrap px-4 h-12 text-sm bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-full transition-all duration-300 shadow-md hover:shadow-lg hover:scale-105"
        >
          <svg class="w-4 h-4 group-hover:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          <span>Upgrade</span>
        </a>
      )}
      <div class="hidden md:block">
        <SimpleThemeToggle client:only="react" />
      </div>
      <button 
        id="menu-button"
        class="w-12 h-12 bg-gray-100 dark:bg-[#1A1F2E] hover:bg-gray-200 dark:hover:bg-[#252B3A] text-gray-800 dark:text-gray-200 rounded-full font-medium transition-all duration-300 flex items-center justify-center relative"
        onclick="toggleMenu()"
      >
        <svg id="hamburger-icon" class="w-5 h-5 transition-all duration-300 absolute" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="close-icon" class="w-5 h-5 transition-all duration-300 absolute opacity-0 rotate-90 scale-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<!-- Slide-out menu overlay -->
<div id="menu-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden transition-opacity duration-300 backdrop-blur-sm">
  <div class="fixed top-20 right-4 max-h-[calc(100vh-6rem)] w-96 bg-white dark:bg-[#1A1F2E] transform translate-x-full transition-transform duration-300 ease-out rounded-3xl shadow-2xl border border-gray-200 dark:border-[#2D3748] flex flex-col" id="menu-panel">
    <div class="p-6 overflow-y-auto flex-1 scroll-smooth menu-scroll-mask">
      <!-- Premium CTA -->
      <div class="mb-6">
        <a href="/premium" class="group block bg-blue-600 hover:bg-blue-700 p-6 rounded-2xl transition-all duration-300 shadow-lg hover:shadow-xl">
          <div class="flex items-center gap-3">
            <div class="p-2 rounded-xl">
              <svg class="w-6 h-6 text-white group-hover:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-1">
                <span class="text-white font-bold text-lg">Upgrade</span>
              </div>
              <p class="text-blue-50 text-sm leading-tight">Unlock premium features</p>
            </div>
          </div>
        </a>
      </div>

      <!-- Navigation Sections -->
      <div class="space-y-4">
        <!-- Main Navigation -->
        <div>
          <div class="px-3 py-2">
            <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Navigate</h3>
          </div>
          <div class="space-y-1">
            <a href="/quizzes" class="group flex items-center gap-3 px-4 py-3 rounded-xl text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-[#252B3A]/50 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              Browse Quizzes
            </a>
            <a href="/about" class="group flex items-center gap-3 px-4 py-3 rounded-xl text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-[#252B3A]/50 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              About
            </a>
            <a href="/contact" class="group flex items-center gap-3 px-4 py-3 rounded-xl text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-[#252B3A]/50 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Contact
            </a>
            <a href="/help" class="group flex items-center gap-3 px-4 py-3 rounded-xl text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-[#252B3A]/50 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              FAQ
            </a>
          </div>
        </div>

        <!-- Account Actions -->
        <div>
          <div class="px-3 py-2 border-t border-gray-200 dark:border-[#2D3748] pt-4">
            <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Account</h3>
          </div>
          <div class="space-y-1" id="account-section">
            <!-- This will be populated by JavaScript -->
          </div>
        </div>

        <!-- Appearance -->
        <div>
          <div class="px-3 py-2 border-t border-gray-200 dark:border-[#2D3748] pt-4">
            <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Appearance</h3>
          </div>
          <button
            id="menu-theme-toggle"
            type="button"
            class="group flex w-full items-center gap-3 px-4 py-3 rounded-xl text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-[#252B3A]/50 hover:text-gray-900 dark:hover:text-white transition-all duration-200"
            aria-live="polite"
            aria-pressed="false"
          >
            <span class="flex h-10 w-10 items-center justify-center rounded-xl bg-gray-100 text-gray-700 transition-colors duration-200 group-hover:bg-gray-200 dark:bg-[#252B3A] dark:text-gray-200 dark:group-hover:bg-[#2D3748]">
              <svg
                id="menu-theme-toggle-sun"
                class="h-5 w-5 transition-opacity duration-200"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              <svg
                id="menu-theme-toggle-moon"
                class="hidden h-5 w-5 transition-opacity duration-200"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
              </svg>
            </span>
            <span id="menu-theme-toggle-label" class="flex-1 text-left">
              Switch to dark mode
            </span>
          </button>
        </div>

        <!-- Footer Links -->
        <div class="pt-4 border-t border-gray-200 dark:border-[#2D3748]">
          <div class="grid grid-cols-2 gap-2">
            <a href="/privacy" class="text-xs text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors py-2">Privacy</a>
            <a href="/terms" class="text-xs text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors py-2">Terms</a>
            <a href="/help" class="text-xs text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors py-2">Help</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  const THEME_STORAGE_KEY = 'theme';

  function setThemePreference(isDark) {
    const root = document.documentElement;
    if (!root) return;

    const currentlyDark = root.classList.contains('dark');
    if (isDark) {
      root.classList.add('dark');
    } else {
      root.classList.remove('dark');
    }

    try {
      localStorage.setItem(THEME_STORAGE_KEY, isDark ? 'dark' : 'light');
    } catch {
      // ignore storage errors
    }

    if (currentlyDark !== isDark) {
      window.dispatchEvent(new CustomEvent('themechange', { detail: { isDark } }));
    }
  }

  window.setThemePreference = setThemePreference;

  function updateMenuThemeToggleButton(forceDarkMode) {
    const button = document.getElementById('menu-theme-toggle');
    const sunIcon = document.getElementById('menu-theme-toggle-sun');
    const moonIcon = document.getElementById('menu-theme-toggle-moon');
    const label = document.getElementById('menu-theme-toggle-label');

    if (!button || !sunIcon || !moonIcon || !label) return;

    const isDark = typeof forceDarkMode === 'boolean'
      ? forceDarkMode
      : document.documentElement.classList.contains('dark');

    button.setAttribute('aria-pressed', String(isDark));
    sunIcon.classList.toggle('hidden', isDark);
    moonIcon.classList.toggle('hidden', !isDark);
    label.textContent = isDark ? 'Switch to light mode' : 'Switch to dark mode';
  }

  function initMenuThemeToggle() {
    const button = document.getElementById('menu-theme-toggle');
    if (!button) return;

    button.addEventListener('click', () => {
      const isDark = document.documentElement.classList.contains('dark');
      setThemePreference(!isDark);
      updateMenuThemeToggleButton(!isDark);
    });

    updateMenuThemeToggleButton();
  }

  function toggleMenu() {
    const overlay = document.getElementById('menu-overlay');
    const panel = document.getElementById('menu-panel');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');
    if (!overlay || !panel || !hamburgerIcon || !closeIcon) return;
    
    // Update account section when opening menu
    if (overlay.classList.contains('hidden')) {
      updateAccountSection();
    }
    
    if (overlay.classList.contains('hidden')) {
      overlay.classList.remove('hidden');
      hamburgerIcon.classList.add('opacity-0', 'rotate-90', 'scale-0');
      closeIcon.classList.remove('opacity-0', 'rotate-90', 'scale-0');
      setTimeout(() => { panel.classList.remove('translate-x-full'); }, 10);
    } else {
      panel.classList.add('translate-x-full');
      closeIcon.classList.add('opacity-0', 'rotate-90', 'scale-0');
      hamburgerIcon.classList.remove('opacity-0', 'rotate-90', 'scale-0');
      setTimeout(() => { overlay.classList.add('hidden'); }, 300);
    }
  }
  window.toggleMenu = toggleMenu;

  window.addEventListener('themechange', (event) => {
    const detail = event.detail || {};
    updateMenuThemeToggleButton(typeof detail.isDark === 'boolean' ? detail.isDark : undefined);
  });

  // Close when clicking outside
  document.addEventListener('click', function(event) {
    const menuButton = document.getElementById('menu-button');
    const overlay = document.getElementById('menu-overlay');
    const panel = document.getElementById('menu-panel');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');
    if (!menuButton || !overlay || !panel || !hamburgerIcon || !closeIcon) return;
    if (!menuButton.contains(event.target) && !overlay.contains(event.target)) {
      panel.classList.add('translate-x-full');
      closeIcon.classList.add('opacity-0', 'rotate-90', 'scale-0');
      hamburgerIcon.classList.remove('opacity-0', 'rotate-90', 'scale-0');
      setTimeout(() => { overlay.classList.add('hidden'); }, 300);
    }
  });

  // Close when pressing Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      const overlay = document.getElementById('menu-overlay');
      const panel = document.getElementById('menu-panel');
      const hamburgerIcon = document.getElementById('hamburger-icon');
      const closeIcon = document.getElementById('close-icon');
      if (!overlay || !panel || !hamburgerIcon || !closeIcon) return;
      if (!overlay.classList.contains('hidden')) {
        panel.classList.add('translate-x-full');
        closeIcon.classList.add('opacity-0', 'rotate-90', 'scale-0');
        hamburgerIcon.classList.remove('opacity-0', 'rotate-90', 'scale-0');
        setTimeout(() => { overlay.classList.add('hidden'); }, 300);
      }
    }
  });

  // Optional fade-out on scroll for logo
  function initLogoFade() {
    const logo = document.getElementById('site-logo');
    const fadeAttribute = logo?.getAttribute('data-fade');
    const shouldFade = fadeAttribute === 'true';

    if (shouldFade && logo) {
      const maxFade = 140;
      function onScroll() {
        const y = Math.min(window.scrollY, maxFade);
        const opacity = 1 - y / maxFade;
        logo.style.opacity = String(opacity);
      }
      window.addEventListener('scroll', () => requestAnimationFrame(onScroll), { passive: true });
      onScroll();
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLogoFade);
  } else {
    initLogoFade();
  }

  // Set logo link based on login state
  function updateLogoLink() {
    const logo = document.getElementById('site-logo');
    if (!logo) return;
    
    // Check if user is logged in (using localStorage for now - can be replaced with real auth check)
    const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
    const username = localStorage.getItem('username') || '';
    
    // Update href based on login state
    logo.setAttribute('href', isLoggedIn ? '/quizzes' : '/');
    
    // Store username in sessionStorage for quizzes page to use
    if (isLoggedIn && username) {
      sessionStorage.setItem('username', username);
    }
  }

  // Run on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateLogoLink);
  } else {
    updateLogoLink();
  }

  // Update menu account section based on login state
  function updateAccountSection() {
    const accountSection = document.getElementById('account-section');
    if (!accountSection) return;

    // Check if user is logged in
    const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
    const username = localStorage.getItem('username') || '';

    if (isLoggedIn && username) {
      // User is logged in - show Account link
      accountSection.innerHTML = `
        <a href="/account" class="group flex items-center gap-3 px-4 py-3 rounded-xl text-base font-medium text-blue-600 dark:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:text-blue-700 dark:hover:text-blue-300 transition-all duration-200">
          <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          Account
        </a>
      `;
    } else {
      // User is not logged in - show Sign In link
      accountSection.innerHTML = `
        <a href="/sign-in" class="group flex items-center gap-3 px-4 py-3 rounded-xl text-base font-medium text-blue-600 dark:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:text-blue-700 dark:hover:text-blue-300 transition-all duration-200">
          <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
          </svg>
          Sign In
        </a>
      `;
    }
  }

  // Run on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateAccountSection);
  } else {
    updateAccountSection();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMenuThemeToggle);
  } else {
    initMenuThemeToggle();
  }

  // Update header upgrade button visibility based on login state
  function updateHeaderUpgradeButton() {
    const upgradeBtn = document.getElementById('header-upgrade-btn');
    if (!upgradeBtn) return;

    // Check if user is logged in
    const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';

    // Show button only if user is NOT logged in
    if (!isLoggedIn) {
      upgradeBtn.classList.remove('hidden');
    } else {
      upgradeBtn.classList.add('hidden');
    }
  }

  // Run on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateHeaderUpgradeButton);
  } else {
    updateHeaderUpgradeButton();
  }
</script>

<style is:global>
  .site-header {
    --header-padding-x: 1.5rem;
    --header-padding-y: 0.75rem;
    padding-top: calc(env(safe-area-inset-top, 0px) + var(--header-padding-y));
    padding-bottom: var(--header-padding-y);
    padding-left: calc(env(safe-area-inset-left, 0px) + var(--header-padding-x));
    padding-right: calc(env(safe-area-inset-right, 0px) + var(--header-padding-x));
  }

  /* Smooth scroll with edge masking for menu - bottom fade only */
  .menu-scroll-mask {
    -webkit-mask-image: 
      linear-gradient(to bottom, black calc(100% - 40px), transparent);
    mask-image: 
      linear-gradient(to bottom, black calc(100% - 40px), transparent);
  }
  
  /* Custom scrollbar styling for menu */
  .menu-scroll-mask::-webkit-scrollbar {
    width: 8px;
  }
  
  .menu-scroll-mask::-webkit-scrollbar-track {
    background: transparent;
  }
  
  .menu-scroll-mask::-webkit-scrollbar-thumb {
    background: rgba(156, 163, 175, 0.3);
    border-radius: 4px;
  }
  
  .menu-scroll-mask::-webkit-scrollbar-thumb:hover {
    background: rgba(156, 163, 175, 0.5);
  }
  
  /* Dark mode scrollbar */
  .dark .menu-scroll-mask::-webkit-scrollbar-thumb {
    background: rgba(75, 85, 99, 0.4);
  }
  
  .dark .menu-scroll-mask::-webkit-scrollbar-thumb:hover {
    background: rgba(75, 85, 99, 0.6);
  }
</style>
 